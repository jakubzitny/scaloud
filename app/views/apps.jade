-@ val projects: List[(Int, String, String)]

html(lang="en")
    head
        title Scaloud - Apps
        link(rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css')
        link(rel='stylesheet' href='/assets/stylesheets/main.css')
    body
        .container#header(align="center")
            h1.text-uppercase Scaloud
            h5 Scala/Play apps PaaS deployment service
        .container#menu(align="center")
            a(class="btn btn-primary" href="/" role="button") Home
            a(class="btn btn-primary" href="/apps" role="button") Apps
            a(class="btn btn-primary" href="/create" role="button") New App
            a(class="btn btn-primary" href="/admin" role="button") Administration
        .container#content(align="center")
            h5 Created Apps
            table.table.table-hover
                thead
                    td
                        u name
                    td
                        u actions
                tbody
                    -for(p <- projects)
                        tr
                            td =p._2
                            td
                                a(href={"/app/"+p._1}) instructions
                            td
                                a(href={p._3}) go to gitlab